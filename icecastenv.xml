<icecast>
    <location>${location}</location>
    <admin>${public_admin}</admin>
    <limits>
        <clients>${clients}</clients>
        <sources>${sources}</sources>
        <queue-size>${queue_size}</queue-size>
        <client-timeout>${client_timeout}</client-timeout>
        <header-timeout>${header_timeout}</header-timeout>
        <source-timeout>${source_timeout}</source-timeout>
        <burst-on-connect>${burst_on_connect}</burst-on-connect>
        <burst-size>${burst_size}</burst-size>
    </limits>
    <authentication>
        <source-password>${source_password}</source-password>
        <relay-password>${relay_password}</relay-password>
        <admin-user>${admin_user}</admin-user>
        <admin-password>${admin_password}</admin-password>
    </authentication>
    <hostname>${HOSTNAME}</hostname>
    <listen-socket>
        <port>8000</port>
    </listen-socket>
    <listen-socket>
        <port>8443</port>
        <ssl>1</ssl>
    </listen-socket>
    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*" />
    </http-headers>
    <fileserve>1</fileserve>
    <paths>
        <basedir>/data</basedir>
        <!-- <logdir>/var/log/icecast</logdir> -->
        <webroot>/usr/share/icecast/web</webroot>
        <adminroot>/usr/share/icecast/admin</adminroot>
        <alias source="/" destination="/status.xsl"/>
        <!-- The certificate file needs to contain both public and private part.
             Both should be PEM encoded. -->
        <ssl-certificate>/data/icecast.pem</ssl-certificate>
    </paths>
    <logging>
        <accesslog>-</accesslog>
        <errorlog>-</errorlog>
        <playlistlog>-</playlistlog>
        <loglevel>3</loglevel> <!-- 4 Debug, 3 Info, 2 Warn, 1 Error -->
        <!-- <logsize>10000</logsize> Max size of a logfile -->
    </logging>
    <security>
        <chroot>0</chroot>
        <changeowner>
            <user>icecast</user>
            <group>icecast</group>
        </changeowner>
    </security>
</icecast>